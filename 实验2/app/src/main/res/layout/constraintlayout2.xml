<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints,HardcodedText,ContentDescription">

    <ImageView
        android:id="@+id/img1.1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/space_station_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img1.2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/rocket_icon"
        app:layout_constraintLeft_toRightOf="@id/img1.1"
        app:layout_constraintRight_toLeftOf="@id/img1.3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img1.3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/rover_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text2.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="space stations"
        app:layout_constraintEnd_toEndOf="@+id/img1.1"
        app:layout_constraintStart_toStartOf="@+id/img1.1"
        app:layout_constraintTop_toBottomOf="@id/img1.1">
    </TextView>

    <TextView
        android:id="@+id/text2.2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="rocket"
        app:layout_constraintEnd_toEndOf="@+id/img1.2"
        app:layout_constraintStart_toStartOf="@+id/img1.2"
        app:layout_constraintTop_toBottomOf="@id/img1.2">
    </TextView>

    <TextView
        android:id="@+id/text2.3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="rover"
        app:layout_constraintEnd_toEndOf="@+id/img1.3"
        app:layout_constraintStart_toStartOf="@+id/img1.3"
        app:layout_constraintTop_toBottomOf="@id/img1.3">
    </TextView>

    <ImageView
        android:id="@+id/img_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/galaxy"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </ImageView>

    <TextView
        android:id="@+id/text3.1"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:text="DCA"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:gravity="center"
        android:background="@color/green"
        app:layout_constraintRight_toLeftOf="@id/img1.2"
        app:layout_constraintTop_toTopOf="@id/img3.2"
        app:layout_constraintBottom_toBottomOf="@id/img3.2" />

    <TextView
        android:id="@+id/text3.3"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:text="MARS"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:gravity="center"
        android:background="@color/green"
        app:layout_constraintLeft_toRightOf="@id/img1.2"
        app:layout_constraintTop_toTopOf="@id/img3.2"
        app:layout_constraintBottom_toBottomOf="@id/img3.2" />

    <ImageView
        android:id="@+id/img3.2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:background="@color/teal_700"
        android:src="@drawable/double_arrows"
        app:layout_constraintTop_toBottomOf="@id/img1.2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/rocket_icon"
        app:layout_constraintRight_toLeftOf="@+id/img_center"
        app:layout_constraintTop_toTopOf="@+id/img_center"
        app:layout_constraintBottom_toBottomOf="@+id/img_center" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:background="@color/orange"
        android:text=" One Way"
        app:layout_constraintTop_toBottomOf="@id/text3.1"
        app:layout_constraintRight_toRightOf="@id/text3.1"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:background="@color/orange"
        android:text=" 1 Traveller "
        app:layout_constraintTop_toBottomOf="@+id/switch1"
        app:layout_constraintLeft_toLeftOf="@id/switch1">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DEPART"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@color/green"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>