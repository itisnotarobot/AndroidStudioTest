<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingConstraints,HardcodedText">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Input"
        android:textColor="@color/gray"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:textSize="35sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:background="@color/yellow_green"
        android:gravity="end"
        android:text="0.0"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/text1.1"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@color/light_gray"
        android:text="7"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="@+id/text2"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <TextView
        android:id="@+id/text1.2"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@color/light_gray"
        android:text="8"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toRightOf="@id/text1.1"
        app:layout_constraintTop_toTopOf="@id/text1.1" />

    <TextView
        android:id="@+id/text1.3"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@color/light_gray"
        android:text="9"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginEnd="20dp"
        app:layout_constraintRight_toLeftOf="@+id/text1.4"
        app:layout_constraintTop_toTopOf="@+id/text1.4" />

    <TextView
        android:id="@+id/text1.4"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@color/light_gray"
        android:text="รท"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="60dp"
        app:layout_constraintRight_toRightOf="@+id/text2"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <TextView
        android:id="@+id/text2.1"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@color/light_gray"
        android:text="4"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="@+id/text1.1"
        app:layout_constraintTop_toBottomOf="@+id/text1.1" />

    <TextView
        android:id="@+id/text2.2"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@color/light_gray"
        android:text="5"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toRightOf="@id/text2.1"
        app:layout_constraintTop_toTopOf="@id/text2.1" />

    <TextView
        android:id="@+id/text2.3"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@color/light_gray"
        android:text="6"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginEnd="20dp"
        app:layout_constraintRight_toLeftOf="@+id/text2.4"
        app:layout_constraintTop_toTopOf="@+id/text2.4" />

    <TextView
        android:id="@+id/text2.4"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@color/light_gray"
        android:text="x"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="60dp"
        app:layout_constraintRight_toRightOf="@+id/text1.4"
        app:layout_constraintTop_toBottomOf="@+id/text1.4" />

    <TextView
        android:id="@+id/text3.1"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@color/light_gray"
        android:text="1"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="@+id/text2.1"
