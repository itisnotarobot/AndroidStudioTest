        android:layout_height="50dp"
        android:background="@color/light_gray"
        android:text="3"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginEnd="20dp"
        app:layout_constraintRight_toLeftOf="@+id/text3.4"
        app:layout_constraintTop_toTopOf="@+id/text3.4" />

    <TextView
        android:id="@+id/text3.4"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@color/light_gray"
        android:text="+"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="60dp"
        app:layout_constraintRight_toRightOf="@+id/text2.4"
        app:layout_constraintTop_toBottomOf="@+id/text2.4" />

    <TextView
        android:id="@+id/text4.1"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@color/light_gray"
        android:text="."
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="@+id/text3.1"
        app:layout_constraintTop_toBottomOf="@+id/text3.1" />

    <TextView
        android:id="@+id/text4.2"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@color/light_gray"
        android:text="0"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toRightOf="@id/text4.1"
        app:layout_constraintTop_toTopOf="@id/text4.1" />

    <TextView
        android:id="@+id/text4.3"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@color/light_gray"
        android:text="="
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginEnd="20dp"
        app:layout_constraintRight_toLeftOf="@+id/text4.4"
        app:layout_constraintTop_toTopOf="@+id/text4.4" />

    <TextView
        android:id="@+id/text4.4"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@color/light_gray"
        android:text="-"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="60dp"
        app:layout_constraintRight_toRightOf="@+id/text3.4"
        app:layout_constraintTop_toBottomOf="@+id/text3.4" />
</androidx.constraintlayout.widget.ConstraintLayout>